            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="What is the history of (mention the name of municipality/city)."
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="What is the main product of the (mention the name of municipality/city)."
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="what are the attractions in (mention the name of municipality/city)."
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
